#include<iostream>
using namespace std;

  // while loop
  // Variables in comments are written inside ''
  
  // Asking input from user and storing it in 'num' variable
  
  int num;
  cout << "Enter how many numbers you want to print: ";
  cin>>num;

  // Running while loop to print the numbers till 'num'
  // Creating a variable 'i' 
  
  int i;
  i = 1;
  while(i <= num){
    cout << i<<endl;
    i = i + 1;
  }
